<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="ConverterBinding">

        <variable
            name="currentViewModel"
            type="ru.project.worldmoneyinfo.ui.converter_screen.ConverterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/basic_currency_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:text="@{currentViewModel.firstCurrencyAmount}"
                android:hint="@string/currency_amount_hint"
                android:inputType="numberDecimal"/>

            <Spinner
                android:id="@+id/first_currency_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                bind:converterCurrenciesItems="@{currentViewModel.currenciesList}"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/target_currency_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@{currentViewModel.resultAmount}"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/second_currency_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                bind:converterCurrenciesItems="@{currentViewModel.currenciesList}"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{()->currentViewModel.currentConverter.convert(basicCurrencyAmount.getText().toString(),firstCurrencyOption.getSelectedItem().toString(),secondCurrencyOption.getSelectedItem().toString())}"
            android:text="@string/convert_button_text"/>

    </LinearLayout>
</layout>

